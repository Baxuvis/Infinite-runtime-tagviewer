<UserControl x:Class="InfiniteRuntimeTagViewer.Interface.Controls.TagFlagsGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfiniteRuntimeTagViewer.Interface.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox BorderThickness="2" Background="#3F3F46" Margin="5,5,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="170"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="flag_name" Text="Flag Name" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <Border Margin="5,5,0,0" MinWidth="250" Width="auto" Height="120" Grid.Row="1">
                <ScrollViewer MaxHeight="400" Background="DarkGoldenrod">
                    <StackPanel Margin="5, 0, 0, 0" x:Name="spBitCollection" Orientation="Vertical">
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </GroupBox>
</UserControl>
