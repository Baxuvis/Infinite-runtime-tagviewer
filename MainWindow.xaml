<Window xmlns:theUIstuff="clr-namespace:Assembly69.theUIstuff"  x:Class="Assembly69.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assembly69"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="DarkCyan">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.RowSpan="4" Grid.Column="1" Background="White" Margin="0,1,0,0" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition />
                <ColumnDefinition Width="130"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="Tagname_text"  Text="Tag Name" Grid.Column="1" />
            <TextBox x:Name="tagID_text"  Text="ID: 00000000" Grid.Column="2" />

            <TextBox x:Name="tagdata_text"  Text="Data Address: " Grid.Row="1" Grid.Column="1" />
            <TextBox x:Name="tagdatnum_text"  Text="Datnum: 00000000" Grid.Column="2" Grid.Row="1"/>



            <ScrollViewer BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.RowSpan="1" Grid.ColumnSpan="3">
                <StackPanel x:Name="tagview_panels"  Margin="0,0,0,0">

                </StackPanel>
            </ScrollViewer>
            <Button Grid.Column="1" Content="Poke" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Click="Button_Click_2"/>
            <TextBlock x:Name="poke_text" Grid.Column="1" HorizontalAlignment="Left" Margin="35,0,0,0" Grid.Row="3" TextWrapping="Wrap" Text=". . ." VerticalAlignment="Center"/>


            <TextBlock x:Name="change_text" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="3" TextWrapping="Wrap" Text="0 changes queued" VerticalAlignment="Center"/>

        </Grid>


        <GridSplitter Grid.Column="1" 
              Grid.RowSpan="4" 
              HorizontalAlignment="Left" 
              VerticalAlignment="Stretch"
              Background="DarkCyan" 
              ShowsPreview="true"
              Width="2"/>


        <Grid Grid.RowSpan="2" Background="White" Margin="0,1,0,2">

            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Search" Grid.Row="1" Margin="10,0,0,0" />
            <TextBox x:Name="Searchbox" Grid.Row="1" TextChanged="Searchbox_TextChanged" HorizontalAlignment="Stretch" Margin="53,0,30,0"/>

        </Grid>

        <TreeView x:Name="TagsTree" Grid.Row="2" >
            <!--TreeViewItem Header="test">
                <TreeViewItem Header="test5" Tag="testing123" Selected="Select_Tag_click"/>
                <TreeViewItem Header="test6"/>
                <TreeViewItem Header="test7"/>
                <TreeViewItem Header="test8"/>
                
            </TreeViewItem-->


        </TreeView>

        <Grid Grid.Row="3" Grid.ColumnSpan="1" Margin="0,1,0,0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition />
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>

            <Button Content="Hook" Grid.Column="1" Click="Button_Click"/>
            <TextBlock x:Name="hook_text" Text="Not hooked" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" />

            <Button Content="Load" Grid.Column="3" Click="Button_Click_1"/>
        </Grid>


    </Grid>
</Window>
